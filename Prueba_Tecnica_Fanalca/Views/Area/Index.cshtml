@model IEnumerable<Prueba_Tecnica_Fanalca.Models.DB.TblArea>

@{
    ViewData["Title"] = "Areas";
}

<h1>Áreas</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NumAreaId">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.NumAreaId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
